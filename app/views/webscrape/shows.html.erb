<!doctype html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>930 Club</title>
        <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css">
        <link rel="author" href="humans.txt">
    </head>
    <body>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Date</th>
            <th>Event</th>
            <th>Time</th>
            <th>Price</th>
          </tr>
        </thead>
        <tbody>
          <% @concerts.each do |concert| %>
            <tr>
            <% if concert.at_css('.custom, .sold-out').nil? %>
              <td><%= concert.at_css('.dates').text.strip %></a></td>
              <td><a href="<%= concert.at_css('.tickets')[:href] %>"><%= concert.at_css('.headliners').text.strip %></td>
              <td><%= concert.at_css('.times').text.strip %></td>
              <td><%= concert.at_css('.price-range').text.strip %></td>
              <td><button type="button" class="btn btn-info btn-sm">Buy Tickets</button></td>
            </tr>
            <% else %>
            <tr>
              <td><%= concert.at_css('.dates').text.strip %></td>
              <td><%= concert.at_css('.headliners').text.strip %></td>
              <td><%= concert.at_css('.times').text.strip %></td>
              <td><%= concert.at_css('.price-range').text.strip %></td>
              <td> <button type="button" class="btn btn-default btn-sm"> Sold Out</td>
            <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    <script src="js/main.js"></script>
  </body>
</html>